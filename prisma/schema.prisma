generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model BlogPost {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  date      DateTime
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Admin {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  name     String
} 